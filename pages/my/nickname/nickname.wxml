<!--pages/my/nickname/nickname.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">昵称</view>
</cu-custom>
<form bindsubmit="submit">
  <view class="bg-white radius margin-xl padding radius-xl">
    <input name="nickName" type="nickname" placeholder="请输入您的昵称" value="{{form.nickName}}" ></input>
  </view>
  <view class="text-grey margin-left-xxl text-sm">不超过20位</view>
  <view class="padding flex flex-column margin-lr-sm radius-lg margin-top-0">
    <button class="cu-btn bg-red margin-tb-sm lg" form-type="submit">提交</button>
  </view>
  </form>



